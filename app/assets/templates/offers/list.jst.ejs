<%if (offers.length === 0){%>
  You have no offers.
<%}%>
<ul>
<% offers.each(function(offer){%>
  <li>
   <%=offer.application().escape('company')%>,
   <%=offer.application().escape('position')%>
   <%=offer.escape('salary')%>
   <%=offer.escape('bonus')%>
   <%=offer.escape('notes')%>
   <% var date = new Date(offer.escape('due_date'))%>
   <%= date.getUTCFullYear() + '-' + date.getUTCMonth()  + '-' + date.getUTCDate() %>
   <button class="del-button" data-id="<%=offer.id%>">Delete!</button>
  </li>
<%});%>
</ul>
